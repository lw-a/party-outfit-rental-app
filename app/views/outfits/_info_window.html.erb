<div class="position-relative justify-content-between mx-1">
  <h2 class="category"><%= outfit.category %></h2>
  <h2 class="size">
    <% size = outfit.size.split
    shortened = []
    size.each do |word|
      if word == "extra"
        shortened << "X"
      else
        shortened << word.first.upcase
      end
    end %>
    <%= shortened.join %>
  </h2>
  <%= link_to '', outfit_path(outfit), class: 'card-link' %>
  <% if outfit.photos.attached? %>
    <%= cl_image_tag outfit.photos[0].key %>
  <% else %>
    <%= image_tag outfit.image_url %>
  <% end %>
  <div>
    <h2><%= outfit.name %></h2>
  </div>
  <h2 class="card-outfit-pricing">Â¥<%= number_with_delimiter(outfit.price) %><span>/day</span></h2>
</div>
