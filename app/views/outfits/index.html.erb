<div class="container my-4 mx-5">
  <h1>Outfits</h1>
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="cards mb-5">
        <% @outfits.each do |outfit| %>
          <%= render 'shared/card_outfit', outfit: outfit %>
        <% end %>
      </div>
    </div>
    <%# <div id="map-index"> %>
    <div class="col-12 col-md-4" id="map-index">
      <div style="width: 135%; height: 650px; position: sticky;
        top: 0px; border-radius: 4px; box-shadow: 0 0 15px rgba(0,0,0,0.2);"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
<%# </div> %>
