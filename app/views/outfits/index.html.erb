<div class="container my-4">
  <h1>Outfits</h1>
</div>
<div class="grid">
  <% @outfits.each do |outfit| %>
    <div class="col-lg-5">
      <div class="card-outfit">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-outfit-infos">
          <div>
            <%= outfit.name %>
            <%= outfit.location %>
            <%= outfit.size %>
            <%= outfit.color %>
            <%= outfit.description %>
            <%= outfit.category %>
          </div>
          <h2> Â¥<%= outfit.price %> </h2>
          <img src="<%= outfit.user.avatar %>" class="card-outfit-user avatar-bordered" />
        </div>
      </div>
    </div>
  <% end %>
</div>
